<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-3 mt-2">
    <h3><%= listings.title %></h3>
</div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listings.image %>" 
        class="card-img-top show-img"
         alt="listing_image">
        <div class="card-body">
        <p class="card-text">Owned by<i><%= listings.owner.username %></i></p>
            <p class="card-text"><%= listings.description %></p>
            <p class="card-text">&#8377; <%= listings.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listings.location %></p>
            <p class="card-text"><%= listings.country %></p>
    </div>
    </div>
    <br>

    <% if(currUser && currUser._id.equals(listings.owner)) { %>
<div class="btns">
    <a href="/listings/<%= listings._id %>/edit" 
        class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

    <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>
<% } %>

<div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listings._id %>/reviews" method="POST" novalidate class="needs-validation">
    <div class="md-3 mt-3">
        <label for="rating" class="form-label">Rating:</label>
        <input type="range" id="rating" name="review[rating]" min="1" max="5"  class="form-range" required>
    </div>
    <div class="md-3 mt-3">
        <label for="comment" class="form-label">Comment:</label>
        <textarea id="comment" name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
    </div>
        <button class="btn btn-outline-dark" type="submit">Submit</button>
    </form>
    
    <hr>
    <p><b>All Reviews</b></p>
<div class="row">
    <% for (let review of listings.reviews) { %>  
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
                <h5 class="card-title">Jane Doe</h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %></p>
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
    <% } %>
</div>

</div>
</div>